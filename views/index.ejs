<div class="author">
    <h1 class="author-heading">Hi, i am Zeph.</h1>
    <p class="author-body">This is my Blog Website</p>
  </div>

<img
src="/img/blog-image.webp"
alt="Blog Image"
class="hero-image"
width="981"
height="528"
/>

<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="button">+ Add New</a>
</div>

<ul class="admin-posts">

    <% data.forEach(post => { %>
     
        <li>
            <a href="/post/<%= post._id %>">
                <%= post.title %>&nearr;
            </a>

            <div class="admin-post-controls">
                <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>

                <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn">
                </form>
            </div>
        </li>
    <% }) %>
</ul>